# Mongodb backup/ restore
mongodump --out /backup/mongobackup_$(date +%F) \
  --username admin \
  --password mongo123! \
  --authenticationDatabase admin



# Check active servies list
systemctl list-units --type=service --state=active

# Clear buff/cache
free -mh
sudo sync; echo 1 | sudo tee /proc/sys/vm/drop_cache


